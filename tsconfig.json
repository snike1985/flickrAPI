{
  "compilerOptions": {
    "lib": [
      "dom",
      "es6"
    ],
    "target": "es5",
    "module": "es6",
    "moduleResolution": "node",
    "jsx": "preserve",
    "isolatedModules": false,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true
  },
  "compileOnSave": false,
  "include": [
    "app/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}